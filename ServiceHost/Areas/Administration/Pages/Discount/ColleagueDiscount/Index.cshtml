@page 
@model IndexModel
@{
    ViewData["Title"] = "مدیریت تخفیفات همکاران";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["Title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Define")">تعریف تخفیف همکاری</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در تخفیفات همکاران</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <select class="form-control" asp-for="SearchModel!.ProductId" asp-items="@Model.Products">
                            <option value="0">-- انتخاب محصول --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success waves-effect waves-light m-l-10 m-r-10">جستجو</button>
                        <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست تخفیفات همکاران (@Model.ColleagueDiscounts?.Count())</h3>
            </div>
            <div class="panel-body">
                @if (TempData["ColleagueDiscountSubmission"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["ColleagueDiscountSubmission"]
                    </div>
                }
                @if (TempData["ColleagueDiscountEdition"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["ColleagueDiscountEdition"]
                    </div>
                }
                else
                {
                    <div></div>
                }
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>محصول</th>
                                    <th>درصد تخفیف</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>وضعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ColleagueDiscounts!)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Product</td>
                                        <td>@item.DiscountRate %</td>
                                        <td>@item.CreationDate</td>
                                        <td class="text-center">
                                            @if (!item.IsRemoved)
                                            {
                                                <i class="fa fa-check fa-3x text-success"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-remove fa-3x text-danger"></i>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-warning waves-effect waves-light m-b-5" href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id })">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>

                                            @if (!item.IsRemoved)
                                            {
                                                <a class="btn btn-danger waves-effect waves-light m-b-5"
                                           asp-page="./Index"
                                           asp-page-handler="Remove"
                                           asp-route-id="@item.Id">
                                                    غیرفعال
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-success waves-effect waves-light m-b-5"
                                           asp-page="./Index"
                                           asp-page-handler="Restore"
                                           asp-route-id="@item.Id">
                                                    فعال سازی
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}