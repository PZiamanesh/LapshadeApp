@page
@model IndexModel
@{
    ViewData["Title"] = "مدیریت انبار";
}

<div class="row">
    <div class="col-sm-12">

        @if (TempData["InventorySubmission"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @TempData["InventorySubmission"]
            </div>
        }
        @if (TempData["InventoryEdition"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @TempData["InventoryEdition"]
            </div>
        }
        else
        {
            <div></div>
        }

        <h4 class="page-title pull-right">@ViewData["Title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد انبار جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در انبار</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <select class="form-control" asp-for="SearchModel!.ProductId" asp-items="@Model.Products">
                            <option value="0">-- انتخاب محصول --</option>
                        </select>
                    </div>
                    <div class="form-group m-r-10">
                        <div class="checkbox checkbox-primary">
                            <input asp-for="SearchModel!.InStock">
                            <label asp-for="SearchModel!.InStock">
                                جستجو در ناموجودها
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success waves-effect waves-light m-l-10 m-r-10">جستجو</button>
                        <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست انبار (@Model.Inventory?.Count())</h3>
            </div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 table-responsive">
                        <table id="datatable" class="table table-striped table-bordered ">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>محصول</th>
                                    <th>قیمت واحد</th>
                                    <th>موجودی انبار</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Inventory!)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Product</td>
                                        <td>@item.UnitPrice</td>
                                        <td>@item.CurrentCount</td>
                                        <td>
                                            <a class="btn btn-warning waves-effect waves-light m-b-5" href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id })">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}